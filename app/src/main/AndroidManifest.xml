<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.inspire.clubspire_02" >
    <uses-sdk android:minSdkVersion="15"/>

    <application
        android:allowBackup="true"

        android:label="@string/app_name"
        android:theme="@style/AppTheme"

        >

        //startup activity
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //register activity
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        //main menu activity
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>


        //reservation 01 activity
        <activity
            android:name=".Reservation01Activity"
            android:label="@string/app_name"
            android:parentActivityName=".MainMenuActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        //reservation 02 activity
        <activity
            android:name=".Reservation02Activity"
            android:label="@string/app_name"
            android:parentActivityName=".Reservation01Activity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        //reservation 03 activity
        <activity
            android:name=".Reservation03Activity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".Reservation02Activity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>


        //list reservation activity
        <activity
            android:name=".ListReservationActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainMenuActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        //hint activity
        <activity
            android:name=".HintActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainMenuActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>

</manifest>
