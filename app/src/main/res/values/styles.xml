<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/available_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name= "android:theme">@android:style/Theme.NoTitleBar</item>
        <item name= "android:textColor">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:popupTheme">@style/MyDarkToolbarStyle</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/primary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

</resources>
