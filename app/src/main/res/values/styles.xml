<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name= "android:theme">@android:style/Theme.NoTitleBar</item>
        <item name= "android:textColor">@android:color/white</item>
        <!--<item name="android:background">@color/background_color</item>  totálně to zesere ??????????  -->
        <!-- CO S TIM??????? <item name= "android:theme">@android:style/Theme.NoTitleBar.Fullscreen</item>-->
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@color/secondary_color</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/secondary_color</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>




    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>
