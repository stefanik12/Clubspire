<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:minHeight="@dimen/menu_item_height"
    android:background="@drawable/items_color"

    >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/icon_height"
        android:maxWidth="@dimen/icon_width"
        android:minHeight="@dimen/icon_height"
        android:minWidth="@dimen/icon_width"
        android:src="@drawable/a_01_b"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/item_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:text="Condition shown here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerInParent="true"
        android:textColor="@color/primary_color" />

</RelativeLayout>