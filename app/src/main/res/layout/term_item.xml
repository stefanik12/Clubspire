<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:id="@+id/item_layout"
    android:background="@drawable/items_color">


    //day

    <TextView
        android:id="@+id/item_txtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:text="PO 29.5.@"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/primary_color" />

    //time
    <TextView
        android:id="@+id/item_txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="16:30 - 17:20@"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/primary_color" />

    //available
    <TextView
        android:id="@+id/item_txtAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="default"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerInParent="true"
        android:textColor="@color/primary_color"
        android:layout_toRightOf="@+id/item_txtDay"
        android:layout_toLeftOf="@+id/item_txtTime"
        android:gravity="center" />

    <!--
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_background" />
        -->


</RelativeLayout>