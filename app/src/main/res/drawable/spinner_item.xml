<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/primary_item_color"
                android:startColor="@color/secondary_item_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_color" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape>
            <gradient
                android:endColor="@color/primary_item_color"
                android:startColor="@color/secondary_item_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_color" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/primary_item_color"
                android:endColor="@color/secondary_item_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_color" />
            <corners
                android:radius="6dp" />
            <padding
                android:right="10dp" />
        </shape>
    </item>
</selector>