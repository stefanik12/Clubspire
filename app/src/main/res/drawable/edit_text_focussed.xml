<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/secondary_color" />
            <corners android:radius="@dimen/text_corners" />
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:top="10dp"
        android:left="10dp"
        android:right="10dp"

        >
        <shape android:shape="rectangle" >
            <padding
                android:top="@dimen/edit_text_border"
                android:bottom="@dimen/edit_text_border"
                android:left="@dimen/edit_text_border"
                android:right="@dimen/edit_text_border" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/primary_color" />
            <corners android:radius="@dimen/text_corners_in" />
        </shape>
    </item>
</layer-list>